rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Helper function to check if user is member of a team
    function isTeamMember(teamId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members;
    }
    
    // Treasures Collection
    // Read: Any authenticated user can read active treasures
    // Write: Only admins can create/update/delete treasures
    match /treasures/{treasureId} {
      allow read: if isAuthenticated() && resource.data.isActive == true;
      allow create, update, delete: if isAdmin();
    }
    
    // Teams Collection
    // Read: Any authenticated user can read any team (for leaderboard)
    // Create: Any authenticated user can create a team
    // Update: Only team members or admins can update
    // Delete: Only admins can delete
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (isTeamMember(teamId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    // GPS Logs Collection (Optional - for analytics)
    // Create: Any authenticated user can log GPS data
    // Read: Only admins can read logs
    match /gps_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update, delete: if false; // Logs are immutable
    }
  }
}
